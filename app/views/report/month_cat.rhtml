<% @cats.each do |g, cats| %>
	<h2>Category Report for <%= g.name %></h2>

	<table>
		<thead>
			<tr>
				<th>Category</th>
				<th>Balance</th>
				<th>Budget</th>
				<th>Difference</th>
			</tr>
		</thead>
		<tbody>
			<% cats.each do |f| %>
				<tr>
					<td><%= f[1] %></td>
					<td><%= currency_span(f[3].to_f) %></td>
					<td><%= currency_span(f[2].to_f) %></td>
					<td><%= currency_span(f[3].to_f - f[2].to_f) %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% end %>
